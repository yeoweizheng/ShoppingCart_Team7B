@using ShoppingCart_Team7B.Models;
@{
    ViewBag.Title = "Login";
}
<style>
    .field-validation-error {
        color: red;
    }
</style>
<form action="Login" method="post">
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h3>User Login</h3>
                </div>
                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-3"><label>Username:</label></div>
                        <div class="col-xs-5"><input class="form-control" type="text" id="username" name="username" /></div>
                        <div class="col-xs-2"></div>
                    </div>

                    <div class="row form-group">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-3"><label>Password:</label></div>
                        <div class="col-xs-5"><input class="form-control" type="password" id="password" name="password" /></div>
                        <div class="col-xs-2"></div>
                    </div>

                    <div class="row form-group">
                        <div class="col-xs-4"></div>
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block" value="Login">Submit</button>
                        </div>
                        <div class="col-xs-4"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-2"></div>
    </div>
</form>