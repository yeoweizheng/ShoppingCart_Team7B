@model ShoppingCart_Team7B.Models.CreateAccount
@{
    ViewBag.Title = "Create Account";
}
<form action="CreateAccount" method="post">
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h3>Create Account</h3>
                </div>
                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-3"><label>Username:</label></div>
                        <div class="col-xs-4">@Html.TextBoxFor(x => x.Username, new { @class = "form-control" })</div>
                        <div class="col-xs-3">@Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })</div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-3"><label>Password:</label></div>
                        <div class="col-xs-4">@Html.PasswordFor(x => x.Password, new { @class = "form-control" })</div>
                        <div class="col-xs-3">@Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })</div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-2"></div>
                        <div class="col-xs-3"><label>Confirm Password:</label></div>
                        <div class="col-xs-4">@Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })</div>
                        <div class="col-xs-3">@Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })</div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4"></div>
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block">Create Account</button>
                        </div>
                        <div class="col-xs-4"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-2"></div>
    </div>
</form>
